{
  "name": "pouchdb-monorepo",
  "version": "7.0.0-prerelease",
  "type": "module",
  "homepage": "http://pouchdb.com/",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "node": "node --experimental-strip-types --experimental-transform-types",
    "build": "npm run build-modules && npm run build-test",
    "build-node": "./bin/build-node.sh",
    "build-modules": "npm run node -- bin/scripts.ts buildModules",
    "test-unit": "mocha tests/unit",
    "test-node": "./bin/test-node.sh",
    "test-component": "mocha --exit tests/component # --exit for #8839",
    "test-fuzzy": "TYPE=fuzzy npm run test",
    "test-browser": "npm run node -- bin/scripts.ts testBrowser",
    "test-memleak": "mocha -gc tests/memleak",
    "eslint": "eslint --cache bin/ packages/node_modules/**/src tests/",
    "dev": "./bin/run-dev.sh",
    "launch-dev-server": "npm run node -- bin/scripts.ts devServer",
    "test": "./bin/run-test.sh",
    "prepublishOnly": "npm run build",
    "release": "./bin/release.sh",
    "install-jekyll": "./bin/install-jekyll.sh",
    "publish-site": "./bin/publish-site.sh",
    "build-site": "npm run node -- bin/scripts.ts buildSite",
    "dev-site-with-docker": "docker build --file docs-dev.Dockerfile --progress=plain . && docker run -it --rm --volume $PWD/docs:/pouchdb-docs/docs -p 4000:4000 $(docker build --file docs-dev.Dockerfile --quiet .)",
    "test-coverage": "./bin/test-coverage.sh",
    "coverage": "COVERAGE=1 SERVER=pouchdb-server POUCHDB_SERVER_FLAGS=--in-memory PLUGINS=pouchdb-find ./bin/test-coverage.sh",
    "build-test": "npm run build-test-utils && npm run build-perf",
    "build-test-utils": "browserify tests/integration/utils.js > tests/integration/utils-bundle.js",
    "build-perf": "browserify tests/performance/index.js > tests/performance-bundle.js",
    "set-version": "npm run node -- bin/scripts.ts setVersion",
    "verify-build": "./bin/verify-build.sh",
    "test-webpack": "./bin/test-webpack.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apache/pouchdb.git"
  },
  "dependencies": {
    "@types/node": "^25.0.1",
    "double-ended-queue": "2.1.0-0",
    "fetch-cookie": "2.2.0",
    "fruitdown": "1.0.2",
    "level": "6.0.1",
    "level-codec": "9.0.2",
    "level-write-stream": "1.0.0",
    "leveldown": "6.1.1",
    "levelup": "4.4.0",
    "localstorage-down": "0.6.7",
    "ltgt": "2.2.1",
    "memdown": "1.4.1",
    "node-fetch": "2.6.9",
    "readable-stream": "1.1.14",
    "spark-md5": "3.0.2",
    "through2": "3.0.2",
    "typescript": "^5.9.3",
    "uuid": "8.3.2",
    "vuvuzela": "1.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "*",
    "@rollup/plugin-replace": "*",
    "add-cors-to-couchdb": "0.0.6",
    "body-parser": "1.20.3",
    "browserify": "17.0.1",
    "browserify-incremental": "3.1.1",
    "builtin-modules": "3.1.0",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "change-case": "4.0.1",
    "cssmin": "0.4.3",
    "denodeify": "1.2.1",
    "derequire": "2.1.1",
    "eslint": "8.7.0",
    "express": "4.20.0",
    "express-pouchdb": "4.2.0",
    "find-requires": "1.0.0",
    "glob": "13.0.0",
    "glob-watcher": "6.0.0",
    "http-server": "0.12.3",
    "istanbul": "0.4.5",
    "less": "3.13.1",
    "lodash": "4.17.21",
    "marky": "1.2.5",
    "median": "0.0.2",
    "mocha": "10.8.2",
    "ncp": "2.0.0",
    "playwright": "1.57.0",
    "pouchdb-express-router": "0.0.11",
    "replace": "1.2.1",
    "rimraf": "2.7.1",
    "rollup": "4.53.3",
    "seedrandom": "3.0.5",
    "source-map": "0.7.4",
    "stacktrace-parser": "0.1.10",
    "stream-to-promise": "1.1.1",
    "tape": "5.9.0",
    "terser": "5.44.1",
    "throw-max-listeners-error": "1.0.1",
    "ua-parser-js": "0.7.24"
  }
}
